<style>
body {
  margin: 0;
  padding: 0;
  overflow-x: hidden; /* Prevent horizontal scrollbar */
}


main {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.home {
	display: flex;
	flex-direction: column;
	height: 100vh;
	width: 80%;
}

.navbar {
	display: flex;
	align-items: center;
}
.offer-container {
	width: 100%;
	height: 100vh;
	display: flex;
	justify-content: center;
}
.offer {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
	max-width: 1200px;
}
.left-side {
  display: flex;
  flex-direction: column;
  max-width: 600px; /* Adjust the max-width as needed */
  margin-right: 100px;
}
.blur {
  position: absolute;
  top: 15%;
  left: 5%;
  box-shadow: 0 0 1000px 100px #1d4fd8b1;
  z-index: -100;
}
.blur2 {
  position: absolute;
  top: 60%;
  left: 30%;
  box-shadow: 0 0 1000px 150px #130f40;
  z-index: -100;
}
h1 {
	font-size: 36px;
}
h2 {
	font-size: 30px;
}
h3 {
	margin-top: 14px;
	font-size: 24px;
}
.btn-cta-homepage {
	align-self: flex-start;
	margin-top: 32px;
}
.right-side {
  display: flex;
}

.right-side img {
  max-width: 100%; /* Ensure the image doesn't exceed its container */
  height: auto; /* Maintain aspect ratio */
}

/* ABOUT ME SECTION STYLE */
.about-me-section {
	 color: #fff;
	 display: flex;
   width: 100%;
	 padding: 24px 0px;
   justify-content: center;
   background: #121212;
   padding-top: 100px;
   padding-bottom: 100px;
 }
 
 .about-me-left-side {
  max-width: 400px;
  max-height: 600px;
  display: flex;
  padding: 70px 70px;
  margin-right: 50px;
  flex-direction: column;
  align-items: center;
  background: #1E1E1F;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Set the box shadow properties */
  border-radius: 3rem;
  border: 1px #383838 solid;

 }
 .avatar-about-me {
   margin-top: -28px;
	 border-radius: 20%;
 }
 .about-me-right-side {
	 max-width: 800px;
   height: auto;
   background: #1E1E1F;
   box-shadow: 0 8px 12px rgba(0, 0, 0, 0.1); /* Set the box shadow properties */
   border-radius: 3rem;
   padding: 30px 40px;
   border: 1px #383838 solid;
 }


			.skills {
				margin: 70px 0px;
			}
			.skills-list {
            list-style: none;
            padding: 0;
        }

        .skill-item {
            margin-bottom: 15px;
        }

        .skill-label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .progress-bar {
            width: 100%;
            height: 20px;
            background-color: #eee;
            border-radius: 5px;
            margin-top: 5px;
        }

        .progress {
            height: 100%;
            border-radius: 5px;
        }

        .html { background-color: #3498db; }
        .css { background-color: #2ecc71; }
        .javascript { background-color: #f39c12; }
        .react { background-color: #61dafb; }
        .node { background-color: #27ae60; }
        .express { background-color: #c0392b; }
        /* Add more skills as needed */
				p {
					font-size: 14px;
				}
	/* END OF CSS STYLE FOR ABOUT ME SECTION */


  

/* PROJECT SECTION STYLE */
.projects {
  width: 100%;
  background-color: #1e1e1e;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 50px;
  padding-bottom: 150px;
}
.projects-title {
  width: 100%;
  max-width: 1200px;
}
.projects-title h1 {
  width: 185px;
  margin-bottom: 60px;
  color: #fff;
  align-self: flex-start;
  position: relative;
}
.projects-title h1::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  border-radius: 2px;
  width: 100%;
  height: 2px; /* Adjust the underline thickness */
  background: linear-gradient(to right, rgb(135, 14, 216), rgb(7, 188, 212)); /* Set your desired underline color */
}

.projects-content-section {
  display: flex;
  max-width: 1200px;
  gap: 40px;
}
.project {
  box-shadow: 0 4px 8px #4d5fffac;
  border-radius: 1rem;
  transition: 0.5s ease;
  position: relative;
}
.project:hover  {
  transform: scale(110%);
  cursor: pointer;
} 
.project:hover .viewicon {
  opacity: 1;
} 
.viewicon {
    position: absolute;
    top: 50%;
    left: 50%;
    background-color: #52668998;
    padding: 25px;
    opacity: 0;
    border-radius: 10px;
    transform: translate(-50%, -50%);
    color: #fff; /* Set the color of the icon */
    font-size: 24px; /* Adjust the size of the icon */
}
.project-view {
  display: flex;
  max-width: 100%;
}
.projects-content-section .project .project-view img {
  max-width: 100%;
  height: auto;
  border-radius: 1rem;
}

.projects-content-section .project .project-view img:hover {
  opacity: 0.5;
}

/* END OF PORTOFOLIO SECTION */

/* START OF BLOG SECTION */
.blog-posts-section {
  /* Add any additional styling for the section if needed */
  padding: 100px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #121212;
  width: 100%;
}
.blog-posts-section-title {
  margin-bottom: 28px;

}
.posts {
  display: flex;
  max-width: 1200px;
  gap: 40px;
}

.post {
  background-color: #1E1E1F;
  border-radius: 3rem;
  overflow: hidden;
  border: 1px solid #383838;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
}


.post-image {
  width: 100%;
  height: auto;
  object-fit: cover;
}

.post-content {
  padding: 30px 20px 30px 20px;
}

.post-title {
  color: #ffffff;
  margin-bottom: 10px;
}

.post-excerpt {
  color: #ffffff;
}

.post-content .read-more {
  display: block;
  margin-top: 10px;
  text-align: right;
  color: #3498db;
  text-decoration: none;
}

/* END OF BLOG SECTION */






</style>
